{
  "expo": {
    "name": "GroceryCalc",
    "slug": "grocery-calculator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "grocerycalc",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#7A9E77"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.grocerycalc.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "GroceryCalc needs camera access to scan product barcodes for quick item entry.",
        "CFBundleDisplayName": "GroceryCalc"
      }
    },
    "android": {
      "package": "com.grocerycalc.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#7A9E77"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["CAMERA"]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "GroceryCalc",
      "shortName": "GroceryCalc",
      "description": "Track grocery items and prices while shopping"
    },
    "plugins": [
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "GroceryCalc needs camera access to scan product barcodes."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
